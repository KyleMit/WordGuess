<UserControl
    x:Class="WordSearch.Flyouts.EnterSecretWord"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="240" Height="150">

    <Border Background="DarkRed" BorderBrush="Red" BorderThickness="2">
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Enter Secret Word:" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="TextInput" FontSize="20" Width="195"  HorizontalAlignment="Center" />
            <Button Click="SaveName" Content="Save Word"  Width="200"  HorizontalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>
